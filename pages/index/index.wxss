  position: relative;
}
.product_head{
  color: #ff6d6d;
  font-size: 30rpx; 
  padding: 20rpx;
}
.image_xi{
  height: 50rpx;
  position: absolute;
  top: 10rpx;
  left: 50rpx;
}
.product_most{
  position: absolute;
