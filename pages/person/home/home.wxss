/* pages/person/home/home.wxss */
@import "../../../template/assembly.wxss";

/*head*/
.home_backgroundImg{
  width: 100%;
  height: 300rpx;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  z-index: -1;
}
.home_relative{
  text-align:  center;
  z-index: 50;
}
.home_personImg{
  width: 120rpx;
  height: 120rpx;
  border-radius:50%;
  border: 3rpx solid #fff; 
  margin-top: 50rpx;
  background-color: #fff;
  z-index: 50;
}
.home_personName{
  color: #fff;
  font-size: 24rpx;
  z-index: 50;
}
/*order*/
.home_order{
  margin-top: 100rpx
}
.order_h1{
  padding: 20rpx;
  color: #383838;
  font-size: 28rpx;
}
.order_ul{
  display: flex;
  padding: 20rpx;
  background-color: #fff;
}
.order_li{
  flex:  1 1 auto;
  text-align: center;
}
.order_li_img{
  width: 80rpx;
  height: 80rpx;
}
.order_li_text{
  color: #353535;
  font-size: 24rpx;
}
.order_num{
  color: #cc0000;
}
.home_other{
  margin-top: 20rpx;
}
/*最新订单*/
.new_order_box{
  position: relative;
  background-color: #fff;
  padding: 20rpx;
  border-bottom: 1px solid #f1f1f1;
}
.new_order_content{
  margin-left: 150rpx;
}
.new_order_img{
  width: 120rpx;
  height: 120rpx;
  border: 1px solid #f1f1f1;
  border-radius:5rpx; 
  position: absolute;
  top: 20rpx;
  left: 20rpx;
}
.new_order_name{
  font-size: 28rpx;
  color: #353535;
  height: 60rpx;
}
.new_order_specifications{
  color: #888;
  font-size: 24rpx;
}
.new_order_price{
  color: #cc0000;
  font-size: 24rpx;
}