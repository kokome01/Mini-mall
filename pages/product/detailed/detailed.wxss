/* pages/product/detailed/detailed.wxss */
/*head*/
page{
  background-color: #fff;
}
.choose_ul{
  background-color: #f1f1f1;
  display: flex;
}
.choose_li{
  flex: 1 1 auto;
  font-size: 28rpx;
  text-align: center;
  color: #353535;
  padding: 20rpx;
}
.choose_li_on{
  color: #0b74df;
  border-bottom: 1px solid #0b74df;
}
/*introduce*/
.introduce_price{
  padding:0rpx 20rpx;
}
.swiper_img{
  width: 100%;
}
.introduce_price text:nth-child(1){
  font-size:24rpx;
  color: #353535;
}
.introduce_price text:nth-child(2){
  font-size:30rpx;
  color: #cc0000;
}
.introduce_price text:nth-child(3){
  font-size:40rpx;
  color: #cc0000;
}

.introduce_name{
  padding: 20rpx;
  position: relative;
}
.name_val{
  font-size:30rpx;
  color: #353535;
  display: inline-block;
  font-weight:800; 
  margin-left: 100rpx;
}
.name_tagging{
  width: 80rpx;
  height: 40rpx;
  position: absolute;
  top: 30rpx;
  left: 20rpx;
}
.introduce_accumulate{
  margin-top: 30rpx;
  display: flex;
}
.introduce_accumulate_li{
  flex: 1 1 auto;
  font-size: 24rpx;
  color: #353535;
  text-align: center;
  margin-bottom:20rpx; 
}
.introduce_accumulate_li:nth-child(1){
  border-left:1px solid #f1f1f1; 
}
.introduce_accumulate_li:nth-child(2){
  border-left:1px solid #f1f1f1; 
}
.introduce_accumulate_li label{
  font-size: 24rpx;
  color: #cc0000;
}
.introduce_choose{
  border-top: 10rpx solid #f1f1f1;
  border-bottom: 10rpx solid #f1f1f1;
  padding: 10rpx;
  height: 40rpx;
  position: relative;
}
.introduce_choose view{
  font-size: 26rpx;
  height: 50rpx;
  margin-top: 5rpx;
}
.introduce_choose_img{
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  float: right;
}
/*other*/
.detailed_other{
  padding: 20rpx;
}
.other_h1{
  width: 150rpx;
  font-size: 30rpx;
  padding: 20rpx 0rpx;
  border-bottom:1px solid #0b74df; 
}
.other_text{
  padding-top: 20rpx;
}
.other_text view{
  font-size: 24rpx;
  color: #888;
  padding: 5rpx;
}
/*evaluate*/
.detailed_evaluate{
  position: relative;
}
.evaluate_name{
  font-size: 24rpx;
  color: #888;
  padding: 10rpx 130rpx 10rpx 10rpx;
  height: 28rpx;
  overflow: hidden;
}
.evaluate_val{
  font-size: 24rpx;
  color: #cc0000;
  position: absolute;
  top: 10rpx;
  right: 5rpx;
  
}
.evaluate_head_ul{
  display: flex;
  background-color: #f1f1f1;
}
.evaluate_head_ul view{
  flex: 1 1 auto;
  font-size: 24rpx;
  text-align: center;
  color: #888;
  padding: 10rpx;
}
/*foot*/
.detailed_foot{
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  height: 100rpx;
  width: 100%;
}
.foot_but{
  position: relative;
}
.foot_but_ul{
  display: flex;
  margin-right: 300rpx;
  border-top: 1px solid #f1f1f1;
}
.foot_but_li{
  margin-top:10rpx;
  flex: 1 1 auto;
  text-align: center;
}
.foot_but_img{
  width: 50rpx;
  height: 50rpx;
}
.foot_but_text{
  font-size: 24rpx;
  color: #353535;
  margin-top: -5rpx;
}
.foot_shop{
  background-color: #cc0000;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  width: 250rpx;
  height: 100rpx;
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  padding: 28rpx;
}
/*pop*/
.black{
  background-color: rgba(0,0,0,0.8);
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  z-index: 100;
}
.detailed_pop{
  background-color: #fff;
  position: fixed;
  bottom: 00px;
  left: 0px;
  width: 100%;
  height: 500rpx;
  z-index: 200;
}
.pop_head{
  position: relative;
  height: 150rpx;
  border-bottom: 1px solid #f1f1f1;
}
.pop_img{
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  top:-80rpx;
  left: 20rpx;
  background-color: #fff;
  border-radius:10rpx;
  padding: 20rpx; 
}
.pop_price{
  color: #cc0000;
  position: absolute;
  top: 10rpx;
  left: 200rpx;
  font-size: 30rpx;
}
.pop_del{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top:10rpx;
  right: 20rpx;
}
.specifications_box{
  padding: 20rpx;
  height: 100rpx;
  border-bottom: 1px solid #f1f1f1;
}
.specifications_box view{
  font-size: 24rpx;
}
.specifications_box>view:nth-child(1){
  margin-bottom: 10rpx;
}
.specifications_li:nth-child(1){
  padding-left: 10px;
  margin-left: 0px;
}
.specifications_li{
  display: inline-block;
  border: 1px solid #cdcdcd;
  padding:5rpx 20rpx;
  margin: 5rpx 10rpx;
  border-radius:5rpx;   
}
.pop_num_box{
  padding: 20rpx;
}
.pop_num_box view{
  font-size: 24rpx;
}
.pop_num_ul{
  float: right;
}
.pop_num_li{
  display: inline-block;
  background-color: #f1f1f1;
  padding: 10rpx 40rpx;
  text-align: center;
}
.pop_num_li:nth-child(1){
  border-radius:1px solid #fff; 
}
.pop_foot view{
  background-color: #cc0000;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  padding: 20rpx;
}