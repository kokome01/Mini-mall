/* pages/product/seachRecommend/seachRecommend.wxss */
/*input*/
.search_box{
  border-bottom:1px solid #f1f1f1; 
  position: relative;
  text-align: center;
}
.input_box{
  position: relative;
  padding: 10rpx 90rpx 10rpx 10rpx;
}
.search_icon{
  width: 45rpx;
  height: 45rpx;
  position: absolute;
  top: 23rpx;
  left: 30rpx;
  z-index: 50;
}
.search_placeholder{
  font-size: 24rpx;
  color: #cdcdcd;
}
.search_input{
  background-color: #fff;
  width: 100%;
  height: 70rpx;
  border-radius:70rpx; 
  text-align: left;
  font-size: 24rpx;
  color: #cdcdcd;
  padding-left: 80rpx;
}
.search_text{
  font-size: 24rpx;
  color: #fff;
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  background-color: #0b74df;
  border-radius:25rpx; 
  padding: 14rpx 25rpx;
  z-index: 500;
}
/*recommend*/
.recommend_box{
  margin-top:20rpx; 
}
.recommend_text{
  display: inline-block;
  background-color: #fff;
  color: #353535;
  font-size: 24rpx;
  padding: 10rpx;
  margin: 20rpx;
  border-radius:10rpx; 
}