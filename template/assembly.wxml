<!-- product -->
<template name="productList">
  <block wx:for="{{productList}}" wx:key="index">
    <view class='product_box'>
      <image class='product_img' src="{{item.img}}"></image>
      <view class='product_content'>
        <view class='product_name'>{{item.name}}</view>
        <view class='product_specifications'>规格:{{item.specifications}}</view>
        <view class='product_price'>￥{{item.price}}</view>
      </view>
    </view>
  </block>
</template>  
  